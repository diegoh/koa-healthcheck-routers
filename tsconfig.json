{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "pretty": true,
    "experimentalDecorators": true,
    "traceResolution": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
