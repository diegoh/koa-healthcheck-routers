  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diegoh/health-handler/issues"
  },
  "homepage": "https://github.com/diegoh/health-handler#readme",
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "testdouble": "^3.12.0"
  },
  "dependencies": {
    "@diegoh/logger": "^1.6.0",
