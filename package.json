{
  "name": "@diegoh/health-handler",
  "version": "1.0.0",
  "description": "Koa handler for adding a health check endpoint to an API",
  "main": "./src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon --exec npm run start",
    "test:unit": "NODE_ENV=test mocha 'src/**/*.spec.js'",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:coverage": "nyc npm run test:unit",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegoh/health-handler.git"
  },
